package util;

public class Calculator {
	
	public static double dolar;
	public static double quantidade;
	public static double iof;
	
	public static double convDolarReal(double dolar, double quantidade, double iof) {
		double noTax = dolar * quantidade;
		return noTax += noTax * iof / 100;
	}
	
	public static String toString() {
		return "Total a ser pago: R$ "
			+ String.format("%.2f", convDolarReal(dolar, quantidade, iof));
	}
	
}
