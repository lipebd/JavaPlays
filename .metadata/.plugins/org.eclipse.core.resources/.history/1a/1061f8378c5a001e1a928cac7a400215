package composition;

import java.util.Scanner;

import entities.Person;
import entities.Pet;
import enums.TipoPet;

public class Program {

	public static void main(String[] args) {

		System.out.println("CADASTRO DE TUTORES");
		System.out.println();
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Nome completo do tutor: ");
		String tutor = sc.nextLine();
		
		System.out.print("Idade do tutor: ");
		int idade = sc.nextInt();
		
		System.out.println("Tipo do PET: ");
		String tipo = sc.next();
		
		System.out.println("Nome do PET: ");
		String petName = sc.next();
		
		Pet pet = new Pet(TipoPet.BIRD, petName);		
		Person fulano = new Person(tutor, idade, pet);
		
		System.out.println("Registro final: " + fulano.getName() + ", de " + fulano.getAge() + "anos de idade, tutor do pet " + fulano.getPet().getPetName());
		

	}

}
